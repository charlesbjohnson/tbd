{
  "name": "tbd",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "main": "src/index.ts",
  "scripts": {
    "build": "npm run build:clean && npm run build:compile && npm run build:link",
    "build:clean": "npm exec --yes -- rimraf dist/ bin/",
    "build:compile": "tsc --outDir dist/",
    "build:link": "pkg --config pkg.config.json --out-path bin/ dist/index.js",
    "fmt": "npm run fmt:pkg; npm run fmt:js",
    "fmt:js": "eslint --fix .",
    "fmt:pkg": "prettier --write package.json",
    "lint": "npm run lint:pkg && npm run lint:js",
    "lint:js": "eslint .",
    "lint:pkg": "prettier --check package.json",
    "prepare": "npm exec --yes -- check-node-version --package --print",
    "start": "ts-node-dev --transpile-only --respawn ."
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.1",
    "@types/node": "^15.12.1",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-xo": "^0.36.0",
    "eslint-config-xo-typescript": "^0.41.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-unicorn": "^33.0.1",
    "pkg": "^5.2.1",
    "prettier-plugin-packagejson": "^2.2.11",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
